<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:paddingTop="36dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/algorithmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="算法参数"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelWindowSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="窗口大小" />

            <TextView
                android:id="@+id/valueWindowSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16384" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderWindowSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="3"
            android:stepSize="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelSmoothing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="平滑系数" />

            <TextView
                android:id="@+id/valueSmoothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.08" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderSmoothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.05"
            android:valueTo="0.5"
            android:stepSize="0.01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelNoiseFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="噪声门限(dB)" />

            <TextView
                android:id="@+id/valueNoiseFloor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-50.0" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderNoiseFloor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="-80"
            android:valueTo="-20"
            android:stepSize="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelYinThreshold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="YIN 阈值" />

            <TextView
                android:id="@+id/valueYinThreshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.12" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderYinThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.05"
            android:valueTo="0.3"
            android:stepSize="0.01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="恢复默认" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/infoButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="参数说明" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
